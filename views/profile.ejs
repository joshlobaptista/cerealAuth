<!doctype html>
<html>
<head>
    <title>Cereal Bar</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="profile.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span>Welcome: <%= user.local.email %> <p>You Cereal lover, you!</p></h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <!-- <strong>password</strong>: <%= user.local.password %> -->
                    </p>

                    <a href="/unlink/local" class="unlink">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>
        <div class="col-sm-5">
          <h3>Past and Present Orders</h3>
          <ul class="orders">
          <% for(var i=0; i<orders.length; i++) {%>
            <li class="orders">
              <span><%= orders[i].name %></span>
              <span><%= orders[i].brands %></span>
              <span><%= orders[i].milk %></span>
              <span><%= orders[i].thumbUp %></span>
              <span><%= orders[i].thumbDown %></span>
              <span><%= orders[i].trash %></span>
              <span><i class="fa fa-thumbs-up" aria-hidden="true"></i></span>
              <span><i class="fa fa-thumbs-down" aria-hidden="true"></i></span>
              <span><i class="fa fa-trash" aria-hidden="true"></i></span>
            </li>
          <% } %>
          </ul>

          <h2>Place Your Order</h2>
        <% if (user.local.email) { %>
          <form action="/orders" method="POST">
            <input type="text" value="<%= user.local.email %>" name="name">
            <select class="brands" name="brands">
              <option value="Lucky Charms">Lucky Charms</option>
              <option value="Pops">Pops</option>
              <option value="Cocoa Puffs">Cocoa Puffs</option>
              <option value="Cookie Crisp">Cookie Crisp</option>
              <option value="Life">Life</option>
              <option value="Cinnamon Toast Crunch">Cinnamon Toast Crunch</option>
              <option value="Honey Nut Cheerios">Honey Nut Cheerios</option>
            </select>
            <select class="milk" name="milk">
              <option value="1% Milk">1%</option>
              <option value="2% Milk">2%</option>
              <option value="Whole Milk">Whole</option>
              <option value="Almond Milk">Almond</option>
              <option value="Soy Milk">Soy</option>
              <option value="Skim Milk">Skim</option>
            </select>
            <button type="submit">Order</button>
          </form>
        </div>
        <% } %>

</div>

<script src="main.js"></script>

</body>
</html>
